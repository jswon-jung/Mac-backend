{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2021",
        "rootDir": "src",
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*", "src/app.ts"],
    "typeRoots": ["./src/types", "./node_modules/@types", ".env"]
}
